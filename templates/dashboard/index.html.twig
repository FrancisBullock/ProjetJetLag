{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord - JetLag{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h1>Session de jeu de {{ user.email }}</h1>
        </div>
        <div class="card-body">
            <h3>Statistiques du Hider</h3>
            <ul class="list-group mb-4">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Temps Bonus accumulé :
                    <span class="badge bg-success rounded-pill" style="font-size: 1.2rem;">
                        {{ session.hiderBonusTime }} minutes
                    </span>
                </li>
                <li class="list-group-item">
                    Début de la partie : {{ session.startTime|date('d/m/Y H:i') }}
                </li>
            </ul>

            <hr>

            <h3>Actions rapides</h3>
            <div class="d-flex gap-2">
                <a href="#" class="btn btn-outline-primary">Piocher une question</a>
                <a href="#" class="btn btn-outline-warning">Voir mes cartes bonus</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}